<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

	<bean id="persona" class="com.malva.spring.beans.Persona" autowire="byName"  >	
		
		
		<property name="apodo" value="manu"> </property>
	</bean>
	
	<bean id="land" class="com.malva.spring.beans.Pais">
		<property name="nombre" value="USA"> </property>
		
	</bean>
	
	<bean id="city" class="com.malva.spring.beans.Ciudad">
		<property name="nombre" value="Urbana"> </property>
	</bean>
	
	
	
	
	
</beans>
